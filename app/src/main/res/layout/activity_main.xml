<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mengxiangda.demo6_iosimageedit.MainActivity">

    <!--<com.example.mengxiangda.demo6_iosimageedit.MyView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/oooo"-->
    <!--/>-->

    <com.example.mengxiangda.demo6_iosimageedit.MyParentView
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="200dp"
        >

        <com.example.mengxiangda.demo6_iosimageedit.MyChildrenView
            android:id="@+id/child_view"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/oooo" />

    </com.example.mengxiangda.demo6_iosimageedit.MyParentView>


    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_undo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/undo"
            android:textColor="@drawable/oooo" />

        <ImageView
            android:id="@+id/iv_redo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/redo" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_save" />


    </LinearLayout>


</RelativeLayout>
